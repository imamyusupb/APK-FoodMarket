<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.detail.PaymentSuccessFragment">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_success_order"/>

    <TextView
        style="@style/TextView.PoppinsNormal22sp020202"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:text="You've Made Order"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/TextView.PoppinsNormal14sp8D92A3"
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        android:textAlignment="center"
        android:text="Just stay at home while we are\npreparing your best foods"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnOrderAgain"
        style="@style/Button.Primary"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="Order Other Food"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnViewOrder"
        style="@style/Button.Secondary"
        android:layout_width="200dp"
        android:layout_marginTop="12dp"
        android:textAllCaps="false"
        android:text="View My Order"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"/>

</LinearLayout>