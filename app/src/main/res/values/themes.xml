<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodMarketKotlin" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoodMarketKotlin.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />
    
    <style name="TextView"/>

    <style name="TextView.PoppinsRegular32sp020202">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#020202</item>
    </style>

    <style name="TextView.PoppinsRegular16sp020202">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#020202</item>
    </style>

    <style name="TextView.PoppinsRegular22sp020202">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#020202</item>
    </style>

    <style name="TextView.PoppinsRegular14sp020202">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8D92A3</item>
    </style>

    <style name="EditText"/>

    <style name="EditText.PoppinsRegular14sp8D9AD23Outlined">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_rectangle_outline_8_020202</item>
        <item name="android:textColor">#8D92A3</item>
    </style>
    
    <style name="Button"/>
    
    <style name="Button.Primary">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#202020</item>
        <item name="android:background">@drawable/shape_rectangle_8_ffc700</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/shape_rectangle_8_8d92a3</item>
    </style>

</resources>